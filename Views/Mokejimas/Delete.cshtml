@model Org.Ktu.Isk.P175B602.Autonuoma.Models.MokejimasCE

@* this will also be used as page title in main layout *@
@{ ViewData["title"] = "Mokėjimo šalinimas"; }

@* content header *@
<div class="main-content-header">
	<span class="title">@ViewData["title"]</span>
	<span class="actions">
		<a 
			href="@Url.Action("Index")" 
			class="btn btn-outline-primary btn-sm"
		>
			<i class="fa-solid fa-angles-left"></i> Atgal į sarašą
		</a>
	</span>
</div>

@* content itself *@
<div class="main-content-ced">
@using( Html.BeginForm(FormMethod.Post, new { @class="entity-d" }) )
{
	@Html.AntiForgeryToken()

	<fieldset>
		<legend class="confirm-msg">Ar tikrai norite šalinti šią sąskaitą?</legend>

		<dl>
			<dt>@Html.DisplayNameFor(m => m.Mokejimas.Id)</dt>
			<dd>@Html.DisplayFor(m => m.Mokejimas.Id)</dd>

			<dt>@Html.DisplayNameFor(m => m.Mokejimas.Data)</dt>
			<dd>@Html.DisplayFor(m => m.Mokejimas.Data)</dd>

			<dt>@Html.DisplayNameFor(m => m.Mokejimas.Suma)</dt>
			<dd>@Html.DisplayFor(m => m.Mokejimas.Suma)</dd>

			<dt>@Html.DisplayNameFor(m => m.Mokejimas.Suma)</dt>
			<dd>@Html.DisplayFor(m => m.Mokejimas.Suma)</dd>

			<dt>@Html.DisplayNameFor(m => m.Mokejimas.fk_KLIENTAS)</dt>
			<dd>@Html.DisplayFor(m => m.Mokejimas.fk_KLIENTAS)</dd>

			<dt>@Html.DisplayNameFor(m => m.Mokejimas.fk_SASKAITA)</dt>
			<dd>@Html.DisplayFor(m => m.Mokejimas.fk_SASKAITA)</dd>
		</dl>

		@if( ViewData["deletionNotPermitted"] != null )
		{
			<div class="fail-msg">
				<i class="fa-solid fa-circle-exclamation"></i> Šios sąskaitos pašalinti negalima, nes 
				jis turi ryšių į priklausomas esybes.
			</div>
		}
		else
		{
			<div class="buttons">
				<button
					formaction="@Url.Action("DeleteConfirm", new {id = Model.Mokejimas.Id})"
					class="btn btn-danger"
					style="white-space: nowrap;"
				><i class="fa-solid fa-trash"></i> Šalinti</button>
			</div>			
		}
	</fieldset>
}
</div>

@* content footer *@
<div class="main-content-footer">
	<span class="title"></span>
	<span class="actions">
		<a 
			href="@Url.Action("Index")" 
			class="btn btn-outline-primary btn-sm"
		>
			<i class="fa-solid fa-angles-left"></i> Atgal į sarašą
		</a>
	</span>
</div>