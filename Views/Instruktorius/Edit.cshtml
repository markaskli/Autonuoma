@model Org.Ktu.Isk.P175B602.Autonuoma.Models.InstruktoriusCE

@* this will also be used as page title in main layout *@
@{ ViewData["title"] = "Instruktoriaus redagavimas"; }

@* content header *@
<div class="main-content-header">
	<span class="title">@ViewData["title"]</span>
	<span class="actions">
		<a 
			href="@Url.Action("Index")" 
			class="btn btn-outline-primary btn-sm"
		>
			<i class="fa-solid fa-angles-left"></i> Atgal į sarašą
		</a>
	</span>
</div>

@* content itself *@
<div class="main-content-ced">
@using( Html.BeginForm(FormMethod.Post, new { @class="entity-ce" }) )
{
	@Html.AntiForgeryToken()

	@Html.ValidationSummary(true, "", new { @class = "text-danger" })
	
	<fieldset>
		<div class="form-group">
			@Html.LabelFor(m => m.Instruktorius.Id)
			@Html.EditorFor(m => m.Instruktorius.Id, new { htmlAttributes = new { @readonly = "readonly" } })
			@Html.ValidationMessageFor(m => m.Instruktorius.Id, "")
		</div>

		<div class="form-group">
			@Html.LabelFor(m => m.Instruktorius.Vardas)
			@Html.EditorFor(m => m.Instruktorius.Vardas)
			@Html.ValidationMessageFor(m => m.Instruktorius.Vardas, "")
		</div>

		<div class="form-group">
			@Html.LabelFor(m => m.Instruktorius.Pavarde)
			@Html.EditorFor(m => m.Instruktorius.Pavarde)
			@Html.ValidationMessageFor(m => m.Instruktorius.Pavarde, "")
		</div>

		<div class="form-group">
			@Html.LabelFor(m => m.Instruktorius.Patirtis)
			@Html.EditorFor(m => m.Instruktorius.Patirtis)
			@Html.ValidationMessageFor(m => m.Instruktorius.Patirtis, "")
		</div>

		<div class="form-group">
			@Html.LabelFor(m => m.Instruktorius.DarboLaikas)
			@Html.EditorFor(m => m.Instruktorius.DarboLaikas)
			@Html.ValidationMessageFor(m => m.Instruktorius.DarboLaikas, "")
		</div>

		<div class="form-group">
			@Html.LabelFor(m => m.Instruktorius.TelefonoNr)
			@Html.EditorFor(m => m.Instruktorius.TelefonoNr)
			@Html.ValidationMessageFor(m => m.Instruktorius.TelefonoNr, "")
		</div>

		<div class="form-group">
			@Html.LabelFor(m => m.Instruktorius.Elpastas)
			@Html.EditorFor(m => m.Instruktorius.Elpastas)
			@Html.ValidationMessageFor(m => m.Instruktorius.Elpastas, "")
		</div>

		<div class="form-group">
			@Html.LabelFor(m => m.Instruktorius.GimimoData)
			@Html.TextBoxFor(m => m.Instruktorius.GimimoData, "{0:yyyy-MM-dd}", new { @class = "date-picker" })
			@Html.ValidationMessageFor(m => m.Instruktorius.GimimoData, "")
		</div>

		<div class="form-group">
			@Html.LabelFor(m => m.Instruktorius.fkFilialas)
			@Html.DropDownListFor(m => m.Instruktorius.fkFilialas, Model.Lists.Filialai, (string)ViewData["none-chosen"])
			@Html.ValidationMessageFor(m => m.Instruktorius.fkFilialas, "")
		</div>

	</fieldset>

	<div class="container-fluid d-flex d-row justify-content-end">
		<button name="save" value="1" class="btn btn-success"><i class="fa-solid fa-floppy-disk"></i> Išsaugoti</button>
	</div>
}
</div>

@* content footer *@
<div class="main-content-footer">
	<span class="title"></span>
	<span class="actions">
		<a 
			href="@Url.Action("Index")" 
			class="btn btn-outline-primary btn-sm"
		>
			<i class="fa-solid fa-angles-left"></i> Atgal į sarašą
		</a>
	</span>
</div>