@model Org.Ktu.Isk.P175B602.Autonuoma.Models.Automobilis.AutomobilisCE

@* this will also be used as page title in main layout *@
@{ ViewData["title"] = "Automobilio sukūrimas"; }

@* content header *@
<div class="main-content-header">
	<span class="title">@ViewData["title"]</span>
	<span class="actions">
		<a 
			href="@Url.Action("Index")" 
			class="btn btn-outline-primary btn-sm"
		>
			<i class="fa-solid fa-angles-left"></i> Atgal į sarašą
		</a>
	</span>
</div>

@* content itself *@
<div class="main-content-ced">
@using( Html.BeginForm(FormMethod.Post, new { @class="entity-ce" }) )
{
	@Html.AntiForgeryToken()
	
	@Html.ValidationSummary(true, "", new { @class = "text-danger" })

	<fieldset>
		<div class="form-group">
			@Html.LabelFor(m => m.Automobilis.VinNr)
			@Html.EditorFor(m => m.Automobilis.VinNr)
			@Html.ValidationMessageFor(m => m.Automobilis.VinNr, "")
		</div>

		<div class="form-group">
			@Html.LabelFor(m => m.Automobilis.ValstybinisNr)
			@Html.EditorFor(m => m.Automobilis.ValstybinisNr)
			@Html.ValidationMessageFor(m => m.Automobilis.ValstybinisNr, "")
		</div>

		<div class="form-group">
			@Html.LabelFor(m => m.Automobilis.PagaminimoData)
			@Html.TextBoxFor(m => m.Automobilis.PagaminimoData, "{0:yyyy-MM-dd}", new { @class = "date-picker" })
			@Html.ValidationMessageFor(m => m.Automobilis.PagaminimoData, "")
		</div>

		<div class="form-group">
			@Html.LabelFor(m => m.Automobilis.Rida)
			@Html.EditorFor(m => m.Automobilis.Rida)
			@Html.ValidationMessageFor(m => m.Automobilis.Rida, "")
		</div>

		<div class="form-group">
			@Html.LabelFor(m => m.Automobilis.RegistravimoData)
			@Html.TextBoxFor(m => m.Automobilis.RegistravimoData, "{0:yyyy-MM-dd}", new { @class = "date-picker" })
			@Html.ValidationMessageFor(m => m.Automobilis.RegistravimoData, "")
		</div>

		<div class="form-group">
			@Html.LabelFor(m => m.Automobilis.Verte)
			@Html.EditorFor(m => m.Automobilis.Verte)
			@Html.ValidationMessageFor(m => m.Automobilis.Verte, "")
		</div>

		<div class="form-group">
			@Html.LabelFor(m => m.Automobilis.FkPavaruDeze)
			@Html.DropDownListFor(m => m.Automobilis.FkPavaruDeze, Model.Lists.PavaruDezes, (string)ViewData["none-chosen"])
			@Html.ValidationMessageFor(m => m.Automobilis.FkPavaruDeze, "")
		</div>

		<div class="form-group">
			@Html.LabelFor(m => m.Automobilis.FkKuroTipas)
			@Html.DropDownListFor(m => m.Automobilis.FkKuroTipas, Model.Lists.KuroTipai, (string)ViewData["none-chosen"])
			@Html.ValidationMessageFor(m => m.Automobilis.FkKuroTipas, "")
		</div>

		<div class="form-group">
			@Html.LabelFor(m => m.Automobilis.FkKebuloTipas)
			@Html.DropDownListFor(m => m.Automobilis.FkKebuloTipas, Model.Lists.KebuloTipai, (string)ViewData["none-chosen"])
			@Html.ValidationMessageFor(m => m.Automobilis.FkKebuloTipas, "")
		</div>

		<div class="form-group">
			@Html.LabelFor(m => m.Automobilis.FkModelis)
			@Html.DropDownListFor(m => m.Automobilis.FkModelis, Model.Lists.Modeliai, (string)ViewData["none-chosen"])
			@Html.ValidationMessageFor(m => m.Automobilis.FkModelis, "")
		</div>

		<div class="form-group">			
			@Html.LabelFor(m => m.Automobilis.FkFilialas)
			@Html.DropDownListFor(m => m.Automobilis.FkFilialas, Model.Lists.Filialai, (string)ViewData["none-chosen"])
			@Html.ValidationMessageFor(m => m.Automobilis.FkFilialas, "")
		</div>	

	</fieldset>

	<div class="container-fluid d-flex d-row justify-content-end">
		<button name="save" value="1" class="btn btn-success"><i class="fa-solid fa-floppy-disk"></i> Išsaugoti</button>
	</div>
}
</div>

@* content footer *@
<div class="main-content-footer">
	<span class="title"></span>
	<span class="actions">
		<a 
			href="@Url.Action("Index")" 
			class="btn btn-outline-primary btn-sm"
		>
			<i class="fa-solid fa-angles-left"></i> Atgal į sarašą
		</a>
	</span>
</div>